<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>The Social Network</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="main-body-holder">

    {{>sidebar}}

    <div class="main-window">
        <div class="main-window-top-bar">

            <div class="top-bar-title">Chats</div>

            <div class="top-bar-options">

                <div class="user-profile-name">

                </div>

                <div class="user-profile-picture"></div>



                <button class="new-chat-button-holder">
                    <span class="icon"><?xml version="1.0" ?><!DOCTYPE PUBLIC '-//W3C//DTD SVG 1.1//EN'  'http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd'><svg height="1.4rem" style="enable-background:new 0 0 32 32;" version="1.1" viewBox="0 0 32 32" width="1.4rem" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path d="M28,14H18V4c0-1.104-0.896-2-2-2s-2,0.896-2,2v10H4c-1.104,0-2,0.896-2,2s0.896,2,2,2h10v10c0,1.104,0.896,2,2,2  s2-0.896,2-2V18h10c1.104,0,2-0.896,2-2S29.104,14,28,14z"/></svg></span>
                    <span class="text">New Chat</span>
                </button>

            </div>
        </div>
        <div class="main-body">

            <div class="inbox-holder">

                <div class="inbox-top-bar">
                    <div class="inbox-heading">Inbox</div>
                    <div class="inbox-notification-count hide">4 New</div>
                </div>

                <div class="inbox-search-bar-holder">
                    <?xml version="1.0" ?><svg enable-background="new 0 0 32 32" id="Editable-line" version="1.1" viewBox="0 0 32 32" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><circle cx="14" cy="14" fill="none" id="XMLID_42_" r="9" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2"/><line fill="none" id="XMLID_44_" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="2" x1="27" x2="20.366" y1="27" y2="20.366"/></svg>
                    <input class="inbox-search-bar-input" type="text" placeholder="Search Chat">
                </div>

                <div class="inbox">
                    <div class="container">





                    </div>

                </div>

            </div>

            <div class="chat-window-holder">


            </div>
        </div>
    </div>
</div>

<script src="script.js"></script>
</body>
</html>